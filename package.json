{
  "name": "plantuml-mcp-server",
  "version": "0.1.3",
  "description": "MCP server for generating PlantUML diagrams",
  "author": "mzagar",
  "license": "MIT",
  "homepage": "https://github.com/mzagar/plantuml-mcp-server#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mzagar/plantuml-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/mzagar/plantuml-mcp-server/issues"
  },
  "type": "module",
  "main": "dist/plantuml-mcp-server.js",
  "bin": {
    "plantuml-mcp-server": "dist/plantuml-mcp-server.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/plantuml-mcp-server.js",
    "start:stdio": "MCP_TRANSPORT=stdio node dist/plantuml-mcp-server.js",
    "start:sse": "MCP_TRANSPORT=sse node dist/plantuml-mcp-server.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "plantuml",
    "diagrams",
    "claude"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.19.1",
    "plantuml-encoder": "^1.4.0",
    "raw-body": "^2.5.2",
    "content-type": "^1.0.5"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/plantuml-encoder": "^1.4.2",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
}
