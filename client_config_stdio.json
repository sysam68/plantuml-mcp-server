{
  "mcpServers": {
    "plantuml": {
      "command": "npx",
      "args": [
        "plantuml-mcp-server"
      ],
      "env": {
        "MCP_TRANSPORT": "stdio",
        "LOG_LEVEL": "info",
        "PLANTUML_SERVER_URL": "https://www.plantuml.com/plantuml",
        "MCP_API_KEY": "${MCP_API_KEY}"
      }
    }
  }
}
